<idea-plugin>
    <id>org.example.FirViewer</id>
    <name>FirViewer</name>
    <vendor email="tgeng@google.com" url="https://github.com/tgeng/FirViewer">Tianyu Geng</vendor>

    <description>Viewer of FIR structure of Kotlin code. To use this plugin, you must use the
    FIR-based Kotlin plugin, which is only available from the Kotlin dev repo for now.</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="FirViewer" anchor="right" factoryClass="io.github.tgeng.firviewer.FirViewerToolWindowFactory"/>
        <toolWindow id="KtSymbolViewer" anchor="right"
            factoryClass="io.github.tgeng.firviewer.KtSymbolViewerToolWindowFactory"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>